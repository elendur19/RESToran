@model RESToran.Models.ReservationPeriod

@{
    ViewData["Title"] = "Create";
    long restId = ViewBag.RestId;
    Restaurant restaurant = ViewBag.Restaurant;
}

<link href="~/css/ReservationPeriod_create.css" rel="stylesheet" type="text/css">
<h3 class="text-center">@restaurant.Name</h3>

<h2>Make new reservation</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TableDescription" class="control-label">Table description :</label>
                <select asp-for="TableDescription" class="form-control" asp-items="ViewBag.Tables"></select>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label">Date :</label>
                <input asp-for="Date" type="date" asp-format="{0:dd-MM-yyyy}" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" asp-format="{0:HH:mm}" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label"></label>
                <input asp-for="EndTime" type="time" asp-format="{0:HH:mm}" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary btn-lg" role="button" aria-disabled="true" asp-action="Index" asp-route-id="@restId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
