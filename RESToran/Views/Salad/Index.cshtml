@model IEnumerable<RESToran.Models.Salad>

@{
    ViewData["Title"] = "Index";
    Restaurant restaurant = ViewBag.Restaurant;
}

<p>
    <a class="float-right btn btn-dark mb-1" role="button" aria-disabled="true" asp-controller="Restaurant" asp-action="Offer" asp-route-id="@restaurant.Id">Back to Offers</a>
</p>

<link href="~/css/Restaurat_list.css" rel="stylesheet" type="text/css">
<h2>@restaurant.Name Salads</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RestaurantId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HouseSpecial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Topping)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RestaurantId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HouseSpecial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Topping)
                </td>
                <td>
                    <a class="btn btn-dark" role="button" aria-disabled="true" asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
