@model IEnumerable<RESToran.Models.Dish>

@{
    ViewData["Title"] = "Index";
    Restaurant restaurant = ViewBag.Restaurant;
}
<link href="~/css/Dish_list.css" rel="stylesheet" type="text/css">
<h2>@restaurant.Name Dishes </h2>

<p>
    <a class="float-right btn btn-primary btn-lg" role="button" aria-disabled="true" asp-controller="Restaurant" asp-action="Details" asp-route-id="@restaurant.Id">Restaurant homepage</a>
</p>
<table class="table table-striped table-hover mt-50">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HouseSpecial)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HouseSpecial)
            </td>
            <td>
                <a class="float-right btn btn-primary btn-lg" role="button" aria-disabled="true" href="/Dish/Restaurant/@restaurant.Id/Dish/@item.Id/Info">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
